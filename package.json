{
    "name": "cqrs-es-simple",
    "description": "Simple CQRS/ES Runner",
    "version": "1.0.0",
    "author": "Stephen Caldwell <steve@campusexplorer.com> ()",
    "bugs": {
        "url": "https://github.com/stevecaldwell77/cqrs-es-simple/issues",
        "email": "steve@campusexplorer.com"
    },
    "contributors": [
        "Stephen Caldwell <steve@campusexplorer.com> ()"
    ],
    "dependencies": {},
    "ava": {
        "failFast": true,
        "verbose": true
    },
    "devDependencies": {
        "auto-bind": "^1.1.0",
        "ava": "^0.22.0",
        "codecov": "^2.3.0",
        "cross-env": "^5.0.5",
        "eslint": "^4.5.0",
        "eslint-config-prettier": "latest",
        "eslint-plugin-prettier": "latest",
        "husky": "^0.14.3",
        "lint-staged": "^4.0.4",
        "nyc": "^11.1.0",
        "prettier": "^1.6.1",
        "remark-cli": "^4.0.0",
        "remark-preset-github": "^0.0.6",
        "xo": "latest"
    },
    "engines": {
        "node": ">=8.3"
    },
    "homepage": "https://github.com/stevecaldwell77/cqrs-es-simple",
    "keywords": [
        "cqrs",
        "event-sourcing",
        "es"
    ],
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
            "prettier --write --single-quote --trailing-comma none --tab-width 4",
            "git add"
        ],
        "*.md": [
            "remark . -qfo",
            "git add"
        ]
    },
    "main": "index.js",
    "nyc": {
        "check-coverage": true,
        "lines": 100,
        "functions": 100,
        "branches": 100,
        "reporter": [
            "lcov",
            "html",
            "text"
        ]
    },
    "remarkConfig": {
        "plugins": [
            "preset-github"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/stevecaldwell77/cqrs-es-simple"
    },
    "xo": {
        "extends": "prettier",
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "sourceType": "script"
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "bracketSpacing": true,
                    "trailingComma": "none",
                    "useTabs": false,
                    "tabWidth": 4
                }
            ],
            "max-len": [
                "error",
                {
                    "code": 80,
                    "ignoreUrls": true
                }
            ],
            "capitalized-comments": "off",
            "camelcase": "off",
            "no-warning-comments": "off"
        },
        "space": 4
    },
    "scripts": {
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "lint": "xo && remark . -qfo",
        "precommit": "lint-staged && npm test",
        "test": "npm run lint && npm run test-coverage",
        "test-coverage": "cross-env NODE_ENV=test nyc ava"
    }
}
